# Discrete and continuous probabilities
import numpy as np
import matplotlib.pyplot as plt
from scipy.stats import binom, norm

# Discrete: Binomial PMF
x = np.arange(0, 11)
pmf = binom.pmf(x, n=10, p=0.5)
plt.bar(x, pmf, label='Binomial PMF', alpha=0.6)

# Continuous: Normal PDF
x_cont = np.linspace(-4, 4, 100)
pdf = norm.pdf(x_cont, loc=0, scale=1)
plt.plot(x_cont, pdf, label='Normal PDF', color='red')

plt.legend()
plt.title("Discrete vs Continuous Distributions")
plt.show()

# Sum rule, product rule, Baye's Theorem
# Bayes' Theorem calculation
P_D = 0.01
P_pos_given_D = 0.95
P_pos_given_noD = 0.05
P_noD = 0.99

P_pos = P_pos_given_D * P_D + P_pos_given_noD * P_noD
P_D_given_pos = (P_pos_given_D * P_D) / P_pos
print("P(Disease | Positive) =", round(P_D_given_pos, 3))

